{
  "name": "concieragent",
  "version": "1.0.0",
  "description": "Multilingual AI Travel Concierge for Hologram - powered by MCP",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
    "start:dev": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/bot.ts",
    "build": "tsc",
    "dev": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/bot.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t concieragent:local .",
    "docker:run": "docker run -p 4001:4001 --env-file .env concieragent:local",
    "helm:lint": "helm lint ./charts",
    "helm:template": "helm template concieragent ./charts --debug"
  },
  "keywords": [
    "hologram",
    "chatbot",
    "vs-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "openai": "^6.9.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
