{
  "name": "concieragent",
  "version": "1.0.0",
  "description": "Multilingual AI Travel Concierge for Hologram - powered by MCP",
  "main": "build/bot.js",
  "scripts": {
    "start": "node build/bot.js",
    "start:dev": "ts-node src/bot.ts",
    "build": "tsc -p tsconfig.build.json",
    "dev": "ts-node src/bot.ts",
    "clean": "rimraf build dist",
    "prebuild": "pnpm run clean",
    "lint": "eslint src --ext .ts",
    "check-format": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "check-types": "tsc --noEmit",
    "test": "pnpm run check-types && pnpm run lint && pnpm run check-format && pnpm run build",
    "docker:build": "docker build -t concieragent:local .",
    "docker:run": "docker run -p 4001:4001 --env-file .env concieragent:local",
    "helm:lint": "helm lint ./charts",
    "helm:template": "helm template concieragent ./charts --debug"
  },
  "keywords": [
    "hologram",
    "chatbot",
    "vs-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "openai": "^6.9.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
